@model Flipard.MVC.ViewModels.AuthLoginViewModel

@{
    ViewData["Title"] = "Sign-In";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flipard Login</title>
   
    <link rel="stylesheet" href="~/css/styles.css">
    <style>
        /* Adjust the login area to be in the middle-right */
        

       
    </style>
</head>
<body>
    <header class="header">
        <div class="logo">
            <div class="logo-circle">
                <span class="circle circle-1"></span>
                <span class="circle circle-2"></span>
            </div>
            <h2>Flipard</h2>
        </div>
        </header>
    <div class="container login-area text-center">
        
        <div class="row">
            <div class="image-container">
                <img src="~/images/leftside.png" alt="A person studying with flashcards.">
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                       <br />
                    </div>
                    <div class="card-body">
                        <form asp-action="Login" method="post">
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email" required>
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="password" class="form-control" id="Password" name="Password" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Sign-In</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
