@model Flipard.MVC.ViewModels.AuthLoginViewModel

@{
    ViewData["Title"] = "Sign-In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flipard Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <style>
        /* Adjust the login area to be in the middle-right */
        .login-area {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .image-container img {
            max-width: 100%;
            height: auto; /* Preserve aspect ratio */
        }

        body, html {
            height: 100%;
        }

        .container {
            height: 100%;
        }
        .image-container {
            background-image: url('~/images/leftside.png');
            background-size: cover;
            background-repeat: no-repeat;
            height: 100%;
            padding-right: 0; /* Remove padding to ensure image covers entire left side */
        }
        
        .card {
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="container-fluid login-area">
        <div class="row">
            <div class="col-md-6 d-none d-md-block image-container">
                <img src="~/images/leftside.png" alt="A person studying with flashcards.">
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        
                    </div>
                    <div class="card-body">
                        <form asp-action="Login" method="post">
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email" required>
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="password" class="form-control" id="Password" name="Password" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Sign-In</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
