@model Flipard.MVC.ViewModels.AuthLoginViewModel

@{
    ViewData["Title"] = "Sign-In";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flipard Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Login.css">
    <style>
        /* Adjust the login area to be in the middle-right */
        

       
    </style>
</head>
<body>

    <div class="LoginArea">

        <div class="row ">

            <div class="col-md-6 sec1">

                <div class="image-container">
                    <img src="~/images/leftside.png" alt="A person studying with flashcards.">
                </div>

            </div>

            <div class="col-md-6 sec2">

                <div class="logo-header">
                    <div class="logo">
                        <div class="logo-circle">
                            <span class="circle circle-1"></span>
                            <span class="circle circle-2"></span>
                        </div>
                        <h2>Flipard</h2>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                       <h3> Login </h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Login" method="post">
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter email or username" required>
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="password" class="form-control" id="Password" name="Password" placeholder="Type your password" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Sign-In</button>
                        </form>
                    </div>
                </div>

                <div class="card loginToRegister">
                    <button type="button" id="loginToRegister" class="btn btn-outline-secondary">New Flipard? Create an account</button>
                </div>

                <div class="card registerToLogin">
                    <button type="button" id="registerToLogin" class="btn btn-outline-secondary">Already have an account? Sign in!</button>
                </div>

            </div>

        </div>

    </div>

</body>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="~/js/LoginRegister.js"></script>

</html>
