            </form>
        </div>
    </div>
</div>
<script>
    function editProfile() {
        window.location.href = '@Url.Action("EditProfile", "Auth")';
    }

    function changePassword() {
        window.location.href = '@Url.Action("ChangePassword", "Home")';
    }
</script>
</body>
</html>
