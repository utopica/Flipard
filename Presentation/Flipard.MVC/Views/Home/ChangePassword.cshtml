@model ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/home/profile.css">
</head>
<body>
<div class="container">
    <div class="profile-card">
        <div class="profile-header">
            <h2>Change Password</h2>
        </div>
        <form asp-action="ChangePassword" method="post">
            <div class="profile-info">
                <span class="profile-info-label">Current Password:</span>
                <span class="profile-info-value">
                    <input asp-for="CurrentPassword" class="form-control"/>
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span> <!-- Moved above -->
                </span>

                <span class="profile-info-label">New Password:</span>
                <span class="profile-info-value">
                    <input asp-for="NewPassword" class="form-control"/>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </span>

                <span class="profile-info-label">Confirm New Password:</span>
                <span class="profile-info-value">
                    <input asp-for="ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </span>
            </div>
            <div class="button-group">
                <button type="submit" class="btn btn-edit">Change Password</button>
                <a asp-action="Profile" class="btn btn-logout">Cancel</a>
            </div>
        </form>
    </div>
</div>
</body>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}